generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Monster {
  id     Int     @id @default(autoincrement())
  name   String
  source String?
  hp     Int
  ac     Int
  str    Int
  dex    Int
  con    Int
  int    Int
  wis    Int
  cha    Int
  cr     String?
  type   String?
  speed  Json?

  /// --- CAMPOS NOVOS ---
  traits           Json   @default("[]")
  actions          Json   @default("[]")
  bonusActions     Json   @default("[]")
  reactions        Json   @default("[]")
  legendaryActions Json   @default("[]")
  mythicActions    Json   @default("[]")
  lairActions      Json   @default("[]")
  spellcasting     Json   @default("[]")
}
