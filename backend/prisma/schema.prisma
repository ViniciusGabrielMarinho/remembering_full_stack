generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Monster {
  id     Int     @id @default(autoincrement())
  name   String
  source String?
  hp     Int
  ac     Int
  str    Int
  dex    Int
  con    Int
  int    Int
  wis    Int
  cha    Int
  cr     String?
  type   String?
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}
